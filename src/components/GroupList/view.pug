table.table.table-hover
  tr
    th Group
    th People
    th Tickets
    th Duration in Queue
    th Actions
  tr(ng-repeat="group in groups", ng-hide="isLoading")
    td
      span {{group.groupId}}
    td
      span {{group.totalNoOfPeople}}
    td
      div(ng-repeat="ticket in group.tickets", style="margin-bottom:5px;")
        span: b Ticket \#{{ticket.ticketId}}
        br
        span {{ticket.user.name}}, {{ticket.noOfPeople}} people
        br
        span(am-time-ago="ticket.datetimeRequested")
    td
      span(am-time-ago="group.datetimeFormed")
    td
      button.btn.btn-default(ng-hide="group.isPresent", ng-click="callGroup(group)") Call
      button.btn.btn-default(ng-hide="group.isPresent", ng-click="markGroupPresent(group)") Mark Present
      button.btn.btn-default.ng-cloak(ng-show="group.isPresent", ng-click="callGroup(group)") Start Group
